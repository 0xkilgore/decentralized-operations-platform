{
  "cleanUrls": true,
  "trailingSlash": false,
  "build": {
    "env": {
      "NEXT_PUBLIC_FORCE_REFRESH": "true"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
} 